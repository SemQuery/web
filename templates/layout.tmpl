<html>
    <head>
        <title>SemQuery</title>
        <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,700' rel='stylesheet' type='text/css'>
        <link rel="stylesheet" type="text/css" href="http://cdn.bootcss.com/semantic-ui/2.1.3/semantic.min.css">
        <link rel="stylesheet" type="text/css" href="/css/all.css">

        <meta name="viewport" content="width=device-width, initial-scale=1">
    </head>
    <body>
        <div class="menu-transparent ui fixed secondary pointing menu navigation">
            <div class="ui container">
                <a href="/"><img src="/images/logo_v2_small.svg" class="logo ui image"></img></a>
                <div class="right menu">
                    {{ if eq .loggedin "true" }} 
                        <a class="active item account" href="">{{ .username }}</a>
                        <a class="item" href="/logout">Logout</a>
                    {{ else }}
                        <a class="item account" href="/login">Login</a>
                        <a class="item" href="/register">Register</a>
                    {{ end }}
                </div>
            </div>
            
        </div>
        {{ yield }}
        
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
        <script src="/js/all.js"></script>
    </body>
</html>
