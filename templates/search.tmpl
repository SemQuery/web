<div class="ui inverted black vertical segment">
    <h1>
        Status:
        {{ .SourceStatus }}
    </h1>
</div>

{{ if eq .SourceStatus "none" }}
<div class="ui raised segment">
    There doesn&rsquo;t appear to be anything here.
    {{ if .IsLoggedIn }}
        <form action="/index_source" method="post">
            <input type="submit" class="ui huge green basic button" value="Index Source"></input>
        </form>
    {{ else }}
        <a href="/login?redirect_back=true" class="ui huge blue basic button">
            Sign in to index source
        </a>
    {{ end }}
</div>
{{ end }}
